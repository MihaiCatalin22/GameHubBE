@startuml GameHub-Component
!includeurl https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml

Container(backendService, "GameHub Backend Service", "Spring Boot Application") {
    Component(gameService, "Game Service", "Handles operations related to games.")
    Component(forumService, "Forum Service", "Handles forum post creation and management.")
    Component(userService, "User Service", "Manages user information and actions.")
    Component(eventService, "Event Service", "Handles event-related functionality.")

    Component(gameController, "Game Controller", "RESTful API endpoints for game operations.")
    Component(forumController, "Forum Controller", "RESTful API endpoints for forum operations.")
    Component(userController, "User Controller", "RESTful API endpoints for user operations.")
    Component(eventController, "Event Controller", "RESTful API endpoints for event operations.")

    ComponentDb(gameRepository, "Game Repository", "JPA Repository for accessing game data.")
    ComponentDb(forumPostRepository, "Forum Post Repository", "JPA Repository for accessing forum posts.")
    ComponentDb(userRepository, "User Repository", "JPA Repository for accessing user data.")
}

Rel(gameController, gameService, "Uses")
Rel(forumController, forumService, "Uses")
Rel(userController, userService, "Uses")
Rel(eventController, eventService, "Uses")
Rel(gameService, gameRepository, "Reads from and writes to")
Rel(forumService, forumPostRepository, "Reads from and writes to")
Rel(userService, userRepository, "Reads from and writes to")
@enduml